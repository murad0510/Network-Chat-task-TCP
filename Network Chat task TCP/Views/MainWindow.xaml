<Window x:Class="Network_Chat_task_TCP.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Network_Chat_task_TCP"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="600">
    <Grid>
        <!--<ListBox Width="500" Height="300" Margin="0,0,0,130" ItemsSource="{Binding UserNameItemSource}"></ListBox>-->

        <TextBox Width="300" Height="30" Margin="26,33,274,371" Text="{Binding UserEnterName}"></TextBox>

        <Button Command="{Binding ConnectServerCommand}" Width="150" Height="70" Content="Connect Server" FontSize="20" Background="DeepSkyBlue" Foreground="White" Margin="386,13,64,351">
            <Button.Resources>
                <Style TargetType="Border">
                    <Setter Property="CornerRadius" Value="20"/>
                </Style>
            </Button.Resources>
        </Button>
    </Grid>
</Window>
